<div class="label-box">
    <div class="label-outer ticket-info-priority-<% lc($current) %>">
        <div class="label-inner ticket-info-priority-<% lc($current) %>"><% loc($current) %></div>
    </div>
</div>\
% if( "$current" ne "$final" and "$final" ne "None" ) {
<div style="float: left; margin: 0 0.2em;">&nbsp;</div>
<div class="label-box">
    <div class="label-outer ticket-info-final-priority-<% lc($final) %>">
        <div class="label-inner ticket-info-final-priority-<% lc($final) %>"><% loc($final) %></div>
    </div>
</div>
% }
<%ARGS>
$Ticket => undef
</%ARGS>
<%INIT>
my $current = $Ticket->PriorityAsString;
my $final = $Ticket->FinalPriorityAsString;
</%INIT>
